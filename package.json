{
  "name": "boilerplate-preact",
  "version": "1.0.0",
  "description": "boilerplate preact project",
  "main": "index.js",
  "scripts": {
    "build:css": "node-sass --include-path src/scss src/scss/main.scss web/css/main.css",
    "build:dev": "rollup -c rollup.client.js",
    "build:lib": "rollup -c rollup.lib.js",
    "start:browser": "browser-sync start --s --port 3020 --index 'web/index.html' --ss web --files 'web/js/**/*.js' --no-notify --no-open",
    "start": "npm run build:lib && npm run build:dev && npm run build:css && npm run watch:all",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:js": "onchange src/client -- npm run build:dev",
    "watch:lib": "onchange src/lib -- npm run build:lib",
    "watch:all": "npm-run-all --parallel start:browser watch:css watch:js watch:lib"
  },
  "author": "AA Veenendaal <aa@opendoorgonorth.com>",
  "license": "MIT",
  "dependencies": {
    "alt": "^0.18.6",
    "get-node-dimensions": "^1.2.0",
    "glamor": "^2.20.12",
    "preact": "^7.1.0",
    "preact-compat": "^3.10.0",
    "react-measure": "^1.4.5",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-module-resolver": "^2.4.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-es2015-classes": "^6.18.0",
    "babel-plugin-transform-es2015-destructuring": "^6.19.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-es2015-parameters": "6.21.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "browser-sync": "^2.18.6",
    "chai": "^3.5.0",
    "eslint": "^3.13.1",
    "eslint-plugin-react": "^6.9.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.3.0",
    "npm-run-all": "^4.0.0",
    "onchange": "^3.2.1",
    "rollup": "^0.41.4",
    "rollup-plugin-alias": "^1.2.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1"
  }
}
