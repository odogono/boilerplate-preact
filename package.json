{
    "name": "boilerplate-preact",
    "version": "1.0.0",
    "description": "boilerplate preact project",
    "main": "index.js",
    "scripts": {
        "build:all": "npm-run-all --parallel build:client build:lib build:css",
        "build:client": "webpack --config webpack.config.js",
        "build:css": "node-sass --include-path src/scss src/scss/main.scss web/css/main.css",
        "build:lib": "webpack --config webpack.vendor.config.js",
        "build:prod": "NODE_ENV=production npm run build:all",
        "start:browser": "browser-sync start --s --port 3020 --index 'web/index.html' --ss web --files 'web/js/**/*.js' --no-notify --no-open",
        "start": "npm run build:lib && npm run build:client && npm run watch:all",
        "watch:css": "onchange \"src/scss\" -- npm run build:css",
        "watch:js": "onchange src/client -- npm run build:client",
        "watch:lib": "onchange src/lib -- npm run build:lib",
        "watch:all": "npm-run-all --parallel start:browser watch:css watch:js watch:lib"
    },
    "author": "AA Veenendaal <aa@opendoorgonorth.com>",
    "license": "MIT",
    "dependencies": {
        "alt": "^0.18.6",
        "get-node-dimensions": "^1.2.0",
        "preact": "^8.1.0",
        "preact-compat": "^3.16.0",
        "react-measure": "^1.4.5",
        "underscore": "^1.8.3"
    },
    "devDependencies": {
        "babel-cli": "^6.18.0",
        "babel-loader": "^7.0.0",
        "babel-plugin-module-resolver": "^2.4.0",
        "babel-plugin-transform-class-properties": "^6.19.0",
        "babel-plugin-transform-es2015-classes": "^6.18.0",
        "babel-plugin-transform-es2015-destructuring": "^6.19.0",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
        "babel-plugin-transform-es2015-parameters": "6.21.0",
        "babel-plugin-transform-object-rest-spread": "^6.20.2",
        "babel-plugin-transform-react-jsx": "^6.8.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "browser-sync": "^2.18.6",
        "chai": "^3.5.0",
        "copy-webpack-plugin": "^4.0.1",
        "css-loader": "^0.28.3",
        "eslint": "^3.13.1",
        "eslint-plugin-react": "^6.9.0",
        "extract-text-webpack-plugin": "^2.1.0",
        "html-webpack-plugin": "^2.28.0",
        "mocha": "^3.2.0",
        "node-sass": "^4.3.0",
        "npm-run-all": "^4.0.0",
        "odgn-live-reload": "^1.0.1",
        "offline-plugin": "^4.8.1",
        "onchange": "^3.2.1",
        "pm2": "^2.4.6",
        "replace-bundle-webpack-plugin": "^1.0.0",
        "sass-loader": "^6.0.5",
        "source-map-loader": "^0.2.1",
        "style-loader": "^0.18.1",
        "sw-precache": "^5.1.1",
        "uglifyjs-webpack-plugin": "^0.4.3",
        "webpack": "^2.6.1"
    },
    "babel": {
        "sourceMaps": true,
        "presets": [
            [
                "es2015",
                {
                    "loose": true
                }
            ],
            "stage-0"
        ],
        "plugins": [
            [
                "transform-react-jsx",
                {
                    "pragma": "h"
                }
            ]
        ]
    }
}
